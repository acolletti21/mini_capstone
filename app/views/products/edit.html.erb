<% @product.errors.full_messages.each do |error| %> 
  <h2><%= error%></h2>
<%end%>

<h2>Edit Product</h2>

<%= form_tag "/products/#{@product.id}", method: :patch do%>

<div>
  <%= label_tag :name %>
  <%= text_field_tag :Name, @product.name %>
</div>

<div>
  <%= label_tag :price %>
  <%= text_field_tag :price, @product.price %>
</div>


<div>
  <%= label_tag :supplier %>
  <%= text_field_tag :supplier, :supplier_id, Supplier.all, :id, :name, selected: @product.supplier_id %>
</div>

<div>
  <%= label_tag :description,  %>
  <%= collection_select :description, @product.description %>
</div>

<input type="submit" value="Update Shoe"
<% end %>