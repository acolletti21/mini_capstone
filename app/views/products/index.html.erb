<h1>All Products</h1>

<% @products.each do |product| %>
  <div class="col-md-4">
    <div class="well">
      <h2>Name: <a href="products/<%= product.id %>"><%= product.name %></a></h2>
      <h4>Price: <%= product.price %></h4>
      <h3>Image: <img src="<%= product.image %>"></h3>
      <h3>Description: <%= product.description %></h3>
    </div>
  </div>
<% end %>