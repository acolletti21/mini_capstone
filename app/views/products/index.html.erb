<h1>All Products</h1>


<% @products.each do |product| %>
  <div class="col-md-4">
    <div class="well">
      <h2>Name: <a href="products/<%= product.id %>"><%= product.name %></a></h2>
      <p class="<%= "sale-item" if product.discounted? %>">Price: <%= number_to_currency(product.price) %></p>
      <h3><img src="<%= product.default_image %>"></h3>
      <h4>Supplier: <%= product.supplier.name %></h4>
      <h5>Description: <%= product.description %></h5>
      <h4><%= product.sale_message %></h4>
    </div>
  </div>
<% end %>