
  <h2>Checkout Page</h2>

  <% @carted_products.each do |carted_product| %>
 

  <h3>Product ID: <%= carted_product.id %></h3>
  <h3>Name: <%= carted_product.product.name %></h3>
  <h3>Total: <%= number_to_currency(carted_product.product.price) %></h3>
    <%= form_tag "/carted_products/#{carted_product.id}", method: :delete do%>
    <%= submit_tag "Remove From Cart", class: "btn btn-danger" %>
    <% end %>
  
  <% end %>
  
  <%= link_to "Buy Now", "/orders", method: :post, class: "btn btn-default"%>

  